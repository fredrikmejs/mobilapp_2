<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Choose_game">

    <Button
        android:id="@+id/button_DROrd"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:background="#4F5C96"
        android:text="Ord fra DR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_regneArk" />

    <Button
        android:id="@+id/button_regneArk"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_marginTop="36dp"
        android:background="#E4AF4545"
        android:text="Regne ark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_topscore" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="219dp"
        android:layout_height="59dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="96dp"
        android:text="VÃ¦lg spille type"
        android:textColor="#B9BA3333"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_HowToPlay"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_marginTop="12dp"
        android:background="#77BA24"
        android:text="Guide til spillet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_DROrd" />

    <TextView
        android:id="@+id/textView_topscore"
        android:layout_width="322dp"
        android:layout_height="163dp"
        android:layout_marginTop="60dp"
        android:text="Din topscore er:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>